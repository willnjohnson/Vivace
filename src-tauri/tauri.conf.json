{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Vivace",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Vivace",
        "width": 1920,
        "height": 1080,
        "resizable": false,
        "fullscreen": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": false,
        "transparent": false,
        "maximized": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "os": {
      "all": true,
      "platform": true,
      "version": true,
      "type": true,
      "arch": true,
      "family": true,
      "locale": true
    },
    "fs": {
      "requireLiteralLeadingDot": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
